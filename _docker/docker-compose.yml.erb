version: '2'
services:
  awestruct_unit_tests:
    build: ./awestruct
    command:
       - /home/awestruct/developer.redhat.com/_cucumber/docker_run.sh
    volumes:
      - ../:/home/awestruct/developer.redhat.com
    environment:
      - HOST_TO_TEST=http://docker:<%=ENV['AWESTRUCT_HOST_PORT']%>
      - AWESTRUCT_HOST_PORT=<%=ENV['AWESTRUCT_HOST_PORT']%>
      - ghprbActualCommit
      - github_status_api_token
      - BUILD_URL
      - RHD_DRIVER

  awestruct_acceptance_test:
    build: ./awestruct
    command:
      - /home/awestruct/developer.redhat.com/_cucumber/docker_run_remote_host.sh
    volumes:
      - ../:/home/awestruct/developer.redhat.com
    links:
      - selhub:hub
    environment:
      - ghprbActualCommit
      - CUCUMBER_TAGS
      - HOST_TO_TEST
      - SELENIUM_HOST=http://hub:4444/wd/hub
      - RHD_JS_DRIVER
      - RHD_DEFAULT_DRIVER
      - RHD_DOCKER_DRIVER

  awestruct_preview_no_reload:
    build: ./awestruct
    command:
      - "rake git_setup clean preview_no_reload[docker]"
    expose:
      - "<%= ENV['AWESTRUCT_HOST_PORT'] %>"
    ports:
      - "<%= ENV['AWESTRUCT_HOST_PORT'] %>:<%= ENV['AWESTRUCT_HOST_PORT'] %>"
    links:
      - drupal
      - searchisko
    volumes:
      - ../:/home/awestruct/developer.redhat.com
    environment:
      - google_api_key
      - dcp_user
      - dcp_password
      - vimeo_client_secret
      - vimeo_access_token_secret
      - vimeo_access_token
      - cache_password
      - cache_url
      - site_base_path
      - site_path_suffix
      - cdn_prefix
      - cache_user
      - github_token
      - drupal_user
      - drupal_password
      - ACCESSIBLE_SLAVE_IP
      - AWESTRUCT_HOST_PORT=<%=ENV['AWESTRUCT_HOST_PORT']%>
      - SEARCHISKO_HOST_PORT=<%=ENV['SEARCHISKO_HOST_PORT']%>
      - DRUPAL_HOST_PORT=<%=ENV['DRUPAL_HOST_PORT']%>
      - DRUPAL_HOST_IP
      - HOST_TO_TEST

  awestruct:
    build: ./awestruct
    command:
      - "rake git_setup clean preview[docker]"
    expose:
      - "<%= ENV['AWESTRUCT_HOST_PORT'] %>"
    ports:
      - "<%= ENV['AWESTRUCT_HOST_PORT'] %>:<%= ENV['AWESTRUCT_HOST_PORT'] %>"
    links:
      - drupal
      - searchisko
    volumes:
      - ../:/home/awestruct/developer.redhat.com
      - ./awestruct/overlay/ssh-key:/home/awestruct/.ssh
    environment:
      - google_api_key
      - dcp_user
      - dcp_password
      - vimeo_client_secret
      - vimeo_access_token_secret
      - vimeo_access_token
      - cache_password
      - cache_url
      - site_base_path
      - site_path_suffix
      - cdn_prefix
      - cache_user
      - github_token
      - drupal_user
      - drupal_password
      - ACCESSIBLE_SLAVE_IP
      - AWESTRUCT_HOST_PORT=<%=ENV['AWESTRUCT_HOST_PORT']%>
      - SEARCHISKO_HOST_PORT=<%=ENV['SEARCHISKO_HOST_PORT']%>
      - DRUPAL_HOST_PORT=<%=ENV['DRUPAL_HOST_PORT']%>
      - DRUPAL_HOST_IP
      - HOST_TO_TEST
      - ghprbActualCommit
      - github_status_api_token
      - BUILD_URL
      <% if ENV['AWE_PROC_COUNT'].to_s != "" %>
      - AWE_PROC_COUNT
      <% end %>

  drupal:
    build: ./drupal
    expose:
      - "80"
    ports:
      - "<%= ENV['DRUPAL_HOST_PORT'] %>:80"
    links:
      - drupalmysql
    volumes:
      - ../images:/tmp/images
      - ../stylesheets:/tmp/stylesheets
    <% unless ENV['JENKINS_HOME'] %>
      - ./drupal/themes/:/var/www/html/themes
      - ./drupal/modules/custom/:/var/www/html/modules/custom
    <% end %>
    environment:
      - DB_NAME=drupal
      # TODO: We could probably take these out and move them to secrets.yml.gpg if they aren't there already
      - DB_USER=drupal
      - DB_PASSWORD=drupal

  drupalmysql:
    image: mariadb:10.0.15
    environment:
      - MYSQL_USER=drupal
      - MYSQL_PASSWORD=drupal
      - MYSQL_DATABASE=drupal
      - MYSQL_ROOT_PASSWORD=superdupersecret
    ports:
      - "<%= ENV['DRUPALMYSQL_HOST_PORT'] %>:3306"
    expose:
      - "5432"

  mysql:
    build: mysql
    volumes:
      - ./mysql:/etc/mysql/conf.d
    environment:
      - MYSQL_DATABASE=searchisko
      - MYSQL_USER=searchisko
      - MYSQL_PASSWORD=searchisko
      - MYSQL_ROOT_PASSWORD=superdupersecret
    ports:
      - "<%= ENV['MYSQL_HOST_PORT'] %>:3306"
    expose:
      - "3306"

  searchisko:
    build: ./searchisko
    ports:
     - "<%= ENV['SEARCHISKO_HOST_PORT'] %>:8080"
    environment:
      - DB_NAME=searchisko
      - DB_USER=searchisko
      - DB_PASSWORD=searchisko
    links:
     - mysql
  
  selhub:
    image: selenium/hub
    restart: always
    ports:
      - "<%= ENV['SELENIUM_HUB_PORT'] %>:4444"
    privileged: true
    environment:
      - GRID_BROWSER_TIMEOUT=100000
      - GRID_TIMEOUT=90000

  docker_firefox:
    image: selenium/node-firefox
    volumes:
      - ../_cucumber/tmp_rhd_downloads:/home/awestruct/developer.redhat.com/_cucumber/tmp_rhd_downloads
    links:
     - selhub:hub

  docker_chrome:
    image: selenium/node-chrome
    volumes:
       - ../_cucumber/tmp_rhd_downloads:/home/awestruct/developer.redhat.com/_cucumber/tmp_rhd_downloads
    links:
     - selhub:hub
    environment:
     - DBUS_SESSION_BUS_ADDRESS=/dev/null

