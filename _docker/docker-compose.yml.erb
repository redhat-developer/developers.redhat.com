awestruct:
  build: ./awestruct
  ports:
    - "<%= ENV['AWESTRUCT_HOST_PORT'] %>:4242"
  <% if ENV['ghprbPullId'] %>
  labels:
    - "com.develpers.redhat.pr=<%=ENV['ghprbPullId']%>"
  <% end %>
  links:
    - drupal
    - searchisko
  privileged: true
  volumes:
    - ../:/home/awestruct/developer.redhat.com
  environment:
    - google_api_key
    - dcp_user
    - dcp_password
    - vimeo_client_secret
    - vimeo_access_token_secret
    - vimeo_access_token
    - cache_password
    - cache_url
    - cache_user
    - github_token
    - drupal_user
    - drupal_password
    - AWESTRUCT_HOST_PORT
    - SEARCHISKO_HOST_PORT
    - DRUPAL_HOST_PORT
    - DRUPAL_HOST_IP
drupal:
  build: ./drupal
  ports:
    - "<%= ENV['DRUPAL_HOST_PORT'] %>:80"
  links:
    - drupalmysql
  volumes:
    - ../_drupal/themes/:/var/www/html/sites/all/themes
    - ../_drupal/scripts/:/drupal/bin
  <% if ENV['ghprbPullId'] %>
  labels:
    - "com.develpers.redhat.pr=<%=ENV['ghprbPullId']%>"
  <% end %>
  environment:
    - DB_NAME=drupal
    # TODO: We could probably take these out and move them to secrets.yml.gpg if they aren't there already
    - DB_USER=drupal
    - DB_PASSWORD=drupal
  privileged: true
drupalmysql:
  build: ./mysql
  <% if ENV['ghprbPullId'] %>
  labels:
    - "com.develpers.redhat.pr=<%=ENV['ghprbPullId']%>"
  <% end %>
  environment:
    - DB_NAME=drupal
    - DB_USER=drupal
    - DB_PASSWORD=drupal
  ports:
    - "<%= ENV['DRUPALMYSQL_HOST_PORT'] %>:3306"
mysql:
  build: ./mysql
  <% if ENV['ghprbPullId'] %>
  labels:
    - "com.develpers.redhat.pr=<%=ENV['ghprbPullId']%>"
  <% end %>
  environment:
    - DB_NAME=searchisko
    - DB_USER=searchisko
    - DB_PASSWORD=searchisko
  ports:
    - "<%= ENV['MYSQL_HOST_PORT'] %>:3306"
elasticsearch:
  build: ./elasticsearch
  <% if ENV['ghprbPullId'] %>
  labels:
    - "com.develpers.redhat.pr=<%=ENV['ghprbPullId']%>"
  <% end %>
  ports:
   - "<%= ENV['ES_HOST_PORT1'] %>:9200"
   - "<%= ENV['ES_HOST_PORT2'] %>:9300"
searchisko:
  build: ./searchisko
  ports:
   - "<%= ENV['SEARCHISKO_HOST_PORT'] %>:8080"
  <% if ENV['ghprbPullId'] %>
  labels:
    - "com.develpers.redhat.pr=<%=ENV['ghprbPullId']%>"
  <% end %>
  environment:
    - DB_NAME=searchisko
    - DB_USER=searchisko
    - DB_PASSWORD=searchisko
  links:
   - mysql
   - elasticsearch
searchiskoconfigure:
  build: ./searchisko_configure
  <% if ENV['ghprbPullId'] %>
  labels:
    - "com.develpers.redhat.pr=<%=ENV['ghprbPullId']%>"
  <% end %>
  environment:
    - DB_NAME=searchisko
    - DB_USER=searchisko
    - DB_PASSWORD=searchisko
  links:
   - mysql
   - elasticsearch
   - searchisko
