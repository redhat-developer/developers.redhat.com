{% set access = 'member-content' %}

{# The replace the training-content class with one of the following, depending on the content: free-content, member-content, training-content #}
<div{{ attributes.addClass(['dp-content-card', access ]) }} 
    access="member" 
    duration="{{node.field_read_time.value}}" 
    image="{{ node.field_card_image.value|default('https://images.unsplash.com/photo-1484480974693-6ca0a78fb36b?ixlib=rb-0.3.5&s=654b7c8ae262f6056711a8605532f3ad&auto=format&fit=crop&w=1352&q=80') }}"
    level="{{(node.field_difficulty.value ?? 'unclassified')|capitalize}}" 
    title="{{node.title.value}}" 
    modified="{{node.changed.value|date('Y-m-d')}}" 
    author="{{node.field_author.value}}"
    uri="{{ node.path.alias }}" 
    onclick="window.location = '{{ node.path.alias }}';">
  <div class="img" style="background-image: url('{{ node.field_card_image.value|default('https://images.unsplash.com/photo-1484480974693-6ca0a78fb36b?ixlib=rb-0.3.5&s=654b7c8ae262f6056711a8605532f3ad&auto=format&fit=crop&w=1352&q=80') }}')">
    {% if access != 'free-content' %}
    <div class="dp-access-level">
      {% if access == 'member-content' %}
      <i class="fa fa-user"></i> For RHDP Members
      {% else %}
      <i class="fa fa-usd"></i> Red Hat Training
      {% endif %}
    </div>
    {% endif %}
  </div>
  <div class="card-info">
    <div class="card-details">
      <div class="dp-content-type {{ node.type.entity.get('type') }}">
          <i class="fa fa-map-o"></i> {{node.type.entity.label}}
      </div>
      {% if node.field_read_time.value %}
      <div class="dp-duration">
          <i class="fa fa-clock-o"></i> 
          {% for intvl in node.field_read_time|reverse %}
          {{ intvl.interval }} {{ intvl.period }}{% if intvl.interval > 1 %}s{% endif %}
          {% endfor %}
      </div>
      {% endif %}
      {% if node.field_difficulty.value %}
      <div class="dp-level">
        {% if node.field_read_time.value %}
        &nbsp;|&nbsp;
        {% endif %}
        {{node.field_difficulty.value|capitalize}}
      </div>
      {% endif %}
    </div>
    <h4>{{ node.title.value }}</h4>
    <p>{{ node.body.value|striptags }}</p>
    <div class="bio">
      <rh-datetime datetime="{{ node.field_published_date.value|date("c")}}">{{node.field_published_date.value|date("Y-m-d")}}</rh-datetime>
      <div class="dp-author">
      {% if node.field_published_date.value|date("c") and node.field_cheat_sheet_author.value %}
      &nbsp;&mdash;&nbsp;
      {% endif %}
      {{node.field_cheat_sheet_author.value}}
      </div>
    </div>
  </div>
</div>